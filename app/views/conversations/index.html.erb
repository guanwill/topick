<div id ="conversations">

<div class="ui segment">
  <h1 class="conversations_heading">Chats</h1>

  <div class="conversations_body">

  <div class="ui list">
    <div class="item">
      <% @conversations.each do |conversation| %>
        <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>

          <% if conversation.sender_id == current_user.id %>
            <% recipient = User.find(conversation.recipient_id) %>
          <% else %>
            <% recipient = User.find(conversation.sender_id) %>
          <% end %>

        <%= link_to recipient.name, conversation_messages_path(conversation), class: 'buddy_name'%><br>
       <% end %>
     <% end %>
   </div>
 </div>
</div>
</div>

</div>
<p><%= button_to 'Back', root_path, class: 'back_to_chats', method: :get %></p>

<%= link_to 'Message me!', conversations_path, method: 'post'%>

</div>
