<div class="page-header"><h1>TOP 10</h1></div>

<!-- <li><%= link_to 'Upload Photo', '/photos/new' %></li> -->

<div class="row">
  <% @photo.each do |photo| %>
  <div class="col-md-3">
    <p class="<%=photo.id%>"><%= link_to image_tag(photo.image.url(:thumb)), photo %> </p>
    <%= link_to like_photo_path(photo), class: 'like', method: :put do %><span class="glyphicon glyphicon-cutlery"></span> <%= photo.get_upvotes.size %><% end %>
    <p class="post_by"><i> Posted by: <%=User.find_by(:id => photo.user_id).name%> </i><p>
  </div>
  <%end%>

</div>

<p><%= will_paginate @photo, class: 'pagination' %></p>
