<div class="editphoto_bg">

<div class="page-header edit-photo-header"><h1>Edit Photo</h1></div>

<%= form_for @photo, :method => :patch do |f| %>

  <div class="editphoto-upload-wrap" >
    <%= f.file_field :image, class: 'editphoto-upload btn btn-primary' %>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'editphoto-label' %> <br/>
    <%= f.text_field :description, class: 'editphoto-field'%>
  </div>

  <p class="editphoto-buttons">
  <%= f.submit 'Submit Changes', class: 'btn btn-warning' %>
  <%= button_to 'Cancel', photo_path, class: 'cancel_edit btn btn-default', method: :get %>
  </p>

<% end %>


</div>
